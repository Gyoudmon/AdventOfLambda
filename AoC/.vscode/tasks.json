{
    "version": "2.0.0",

    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    },

    "tasks": [
        {
            "label": "魔法能量远征[Release]",
            "detail": "构建和运行 魔法能量远征",
            "command": "raco",
            "type": "cppbuild",
            "problemMatcher": [ "$gcc" ],
            "args": [ "wisemon", "-d", "cc", "${workspaceFolder}/village/cpp/MagicalEnergyExpedition.cpp" ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": false },
            "windows": { "problemMatcher": ["$msCompile"] }
        },

        {
            "type": "cppbuild",
            "label": "魔法能量远征[Debug]",
            "detail": "构建和调试 魔法能量远征",
            "command": "raco",
            "problemMatcher": [ "$gcc" ],
            "args": [ "wisemon", "-d", "cc-dbg", "${workspaceFolder}/village/cpp/MagicalEnergyExpedition.cpp" ],
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": false },
            "windows": { "problemMatcher": ["$msCompile"] }
        }
    ]
}
